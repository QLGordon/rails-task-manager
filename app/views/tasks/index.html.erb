<h1>TASKS</h1>

<ol>
  <% @tasks.each do |task| %>
  <li>
    <span> <%= link_to task.title, task_path(task.id) %> </span>
    <% if task.completed == true %>
      <span>✔︎</span>
    <% else %>
      <span></span>
    <% end %>
  </li>
  <% end %>
</ol>

<h3><%= link_to "✚ add a new task", task_path("new") %></h3>
